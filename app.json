{
  "expo": {
    "name": "VeriGate Scan",
    "slug": "verigate-scan",
    "version": "1.0.0",
    "owner": "boldflame-enterprises",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "verigate-scan",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#059669"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.verigate.scan",
      "infoPlist": {
        "NSCameraUsageDescription": "VeriGate Scan needs camera access to scan QR codes for access control verification."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#059669"
      },
      "package": "com.verigate.scan",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.INTERNET",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-sqlite",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "VeriGate Scan needs camera access to scan QR codes for access control verification."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "796443f2-a1cb-4300-a2b9-0632479d7796"
      }
    }
  }
}
